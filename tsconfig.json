{
  "compilerOptions": {
    "lib": ["es2023", "dom"],
    "module": "esnext",
    "target": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "outDir": "build",
    "declaration": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["tests/**/*.ts", "node_modules"]
}
